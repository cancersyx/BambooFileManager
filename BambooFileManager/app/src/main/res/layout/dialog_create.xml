<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_create_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文本文件" />

        <RadioButton
            android:id="@+id/rb_create_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件夹" />

    </RadioGroup>

    <EditText
        android:id="@+id/et_new_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入文件名称"
        android:singleLine="true" />

</LinearLayout>